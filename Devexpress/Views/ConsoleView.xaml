<UserControl x:Class="Ogur.Terraria.Manager.Devexpress.Views.ConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             Background="#1e1e1e">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Status Bar -->
        <Border Grid.Row="0"
                Background="#2d2d30"
                CornerRadius="5"
                Padding="15,10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="ðŸ–¥ï¸ Server Status:"
                           Foreground="White"
                           FontSize="14"
                           VerticalAlignment="Center" />

                <TextBlock Grid.Column="1"
                           Text="{Binding StatusText}"
                           Foreground="#00ff00"
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0" />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <dx:SimpleButton Content="Connect"
                                     Command="{Binding ConnectCommand}"
                                     Style="{StaticResource PrimaryButton}"
                                     Height="32"
                                     MinWidth="100"
                                     Margin="0,0,8,0" />

                    <dx:SimpleButton Content="Disconnect"
                                     Command="{Binding DisconnectCommand}"
                                     Style="{StaticResource SecondaryButton}"
                                     Height="32"
                                     MinWidth="100"
                                     Margin="0,0,8,0" />

                    <dx:SimpleButton Click="Settings_Click"
                                     Style="{StaticResource SecondaryButton}"
                                     Height="32"
                                     Width="32"
                                     ToolTip="Settings">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                              Fill="White"
                              Stretch="Uniform"
                              Width="16"
                              Height="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </dx:SimpleButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Console Output -->
        <Border Grid.Row="1"
                Background="#0c0c0c"
                BorderBrush="#3e3e42"
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,0,0,10">
            <Grid>
                <ScrollViewer x:Name="ConsoleScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="Transparent"
                             Foreground="#00ff00"
                             FontFamily="Consolas"
                             FontSize="12"
                             BorderThickness="0"
                             Padding="10"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Disabled"
                             HorizontalScrollBarVisibility="Disabled"
                             TextChanged="ConsoleOutput_TextChanged" />
                </ScrollViewer>

                <dx:SimpleButton Content="ðŸ—‘ï¸ Clear"
                                 Command="{Binding ClearConsoleCommand}"
                                 Style="{StaticResource SecondaryButton}"
                                 Height="28"
                                 Width="80"
                                 FontSize="11"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="10,10,35,10" />
            </Grid>
        </Border>

        <!-- Command Input -->
        <Border Grid.Row="2"
                Background="#2d2d30"
                BorderBrush="#3e3e42"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <dxe:TextEdit Grid.Column="0"
                              EditValue="{Binding CommandInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              FontFamily="Consolas"
                              FontSize="13"
                              Background="#1e1e1e"
                              Foreground="White"
                              BorderThickness="0"
                              KeyDown="CommandInput_KeyDown"
                              NullText="Enter command..." />

                <dx:SimpleButton Grid.Column="1"
                                 Content="Send"
                                 Command="{Binding SendCommand}"
                                 Style="{StaticResource PrimaryButton}"
                                 Height="32"
                                 MinWidth="80"
                                 Margin="10,0,0,0" />
            </Grid>
        </Border>

        <!-- Quick Commands -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalScrollBarVisibility="Auto"
                      Visibility="{Binding CommandButtonsVisibility}">
            <ItemsControl ItemsSource="{Binding Commands}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <dx:SimpleButton
                            Command="{Binding DataContext.ExecuteServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource SecondaryButton}"
                            Height="36"
                            MinWidth="120"
                            Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}"
                                           FontSize="16"
                                           Margin="0,0,8,0" />
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13" />
                            </StackPanel>
                        </dx:SimpleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>