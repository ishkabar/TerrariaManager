<UserControl x:Class="Ogur.Terraria.Manager.Devexpress.Views.ConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             Background="#1e1e1e">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Console Output -->
        <Border Grid.Row="1"
                Background="#0c0c0c"
                BorderBrush="#3e3e42"
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,0,0,10">
            <Grid>
                <ScrollViewer x:Name="ConsoleScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="Transparent"
                             Foreground="#00ff00"
                             FontFamily="Consolas"
                             FontSize="12"
                             BorderThickness="0"
                             Padding="10"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Disabled"
                             HorizontalScrollBarVisibility="Disabled"
                             TextChanged="ConsoleOutput_TextChanged" />
                </ScrollViewer>

                <dx:SimpleButton Content="ðŸ—‘ï¸ Clear"
                                 Command="{Binding ClearConsoleCommand}"
                                 Style="{StaticResource SecondaryButton}"
                                 Height="28"
                                 Width="80"
                                 FontSize="11"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="10,10,35,10" />
            </Grid>
        </Border>

        <!-- Command Input -->
        <Border Grid.Row="2"
                Background="#2d2d30"
                BorderBrush="#3e3e42"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <dxe:TextEdit Grid.Column="0"
                              x:Name="CommandInputBox"
                              EditValue="{Binding CommandInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              FontFamily="Consolas"
                              FontSize="13"
                              Background="#1e1e1e"
                              Foreground="White"
                              BorderThickness="0"
                              KeyDown="CommandInput_KeyDown"
                              NullText="Enter command..." />

                <dx:SimpleButton Grid.Column="1"
                                 Command="{Binding SayCommand}"
                                 Style="{StaticResource SecondaryButton}"
                                 Height="50"
                                 MinWidth="100"
                                 Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ Say"
                                   FontSize="13"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="(Ctrl+Enter)"
                                   FontSize="10"
                                   Opacity="0.7"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0" />
                    </StackPanel>
                </dx:SimpleButton>

                <dx:SimpleButton Grid.Column="2"
                                 Command="{Binding SendCommand}"
                                 Style="{StaticResource PrimaryButton}"
                                 Height="50"
                                 MinWidth="100"
                                 Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Execute"
                                   FontSize="13"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="(Enter)"
                                   FontSize="10"
                                   Opacity="0.7"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0" />
                    </StackPanel>
                </dx:SimpleButton>
            </Grid>
        </Border>

        <!-- Quick Commands -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalScrollBarVisibility="Auto"
                      Visibility="{Binding CommandButtonsVisibility}">
            <ItemsControl ItemsSource="{Binding Commands}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <dx:SimpleButton
                            Command="{Binding DataContext.ExecuteServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource SecondaryButton}"
                            Height="36"
                            MinWidth="120"
                            Margin="0,0,8,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}"
                                           FontSize="16"
                                           Margin="0,0,8,0" />
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13" />
                            </StackPanel>
                        </dx:SimpleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>