<Window x:Class="Ogur.Terraria.Manager.Devexpress.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        Title="{Binding Title}"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">

    <Border Background="#1e1e1e"
            CornerRadius="10"
            BorderBrush="#3d3d3d"
            BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Prompt}"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <!-- Input -->
            <dxe:TextEdit Grid.Row="1"
                          x:Name="InputTextBox"
                          EditValue="{Binding InputValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Background="#2d2d30"
                          Foreground="White"
                          BorderBrush="#3e3e42"
                          Height="40"
                          FontSize="13"
                          VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <dx:SimpleButton Content="Execute"
                                 Click="Execute_Click"
                                 Style="{StaticResource PrimaryButton}"
                                 Height="36"
                                 MinWidth="100"
                                 Margin="0,0,10,0"/>

                <dx:SimpleButton Content="Cancel"
                                 Click="Cancel_Click"
                                 Style="{StaticResource SecondaryButton}"
                                 Height="36"
                                 MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>